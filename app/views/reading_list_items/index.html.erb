<% title t("views.reading_list.meta.title") %>

<%= content_for :page_meta do %>
  <link rel="canonical" href="<%= app_url("/readinglist") %>" />
  <meta name="description" content="<%= t("views.reading_list.meta.description") %>">
  <%= meta_keywords_default %>

  <meta property="og:type" content="article" />
  <meta property="og:url" content="<%= app_url("/readinglist") %>" />
  <meta property="og:title" content="<%= t("views.reading_list.meta.og.title", community: community_name) %>" />
  <meta property="og:description" content="<%= t("views.reading_list.meta.description") %>" />
  <meta property="og:site_name" content="<%= community_name %>" />

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@<%= Settings::General.social_media_handles["twitter"] %>">
  <meta name="twitter:title" content="<%= t("views.reading_list.meta.og.title", community: community_name) %>">
  <meta name="twitter:description" content="<%= t("views.reading_list.meta.description") %>">
<% end %>

<div id="reading-list" data-view="<%= @view %>"></div>

<%= javascript_include_tag "readingList", defer: true %>
