            <%= form_for(ProMembership.new(user: @user)) do |f| %>
              <%= f.submit(
                    "Become a Pro member for #{ProMembership::MONTHLY_COST} credits/mo",
                    class: "partnership-option-cta",
                  ) %>
            <% end %>
          <% else %>
            <a
              class="partnership-option-cta"
              id="purchase-credits"
