#!/usr/bin/env ruby
#
# Copyright (c) 2014 Evan Phoenix
#

require 'rubygems'

cli_arg = ARGV.shift

inc = ""

if cli_arg == "-I"
  inc = ARGV.shift
  $LOAD_PATH.concat inc.split(":")
end

module Puma; end

Puma.const_set("WILD_ARGS", ["-I", inc])

require 'puma/cli'

cli = Puma::CLI.new ARGV

cli.run
