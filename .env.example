# Forem Email Configuration
# Copy this file to .env and fill in your actual values

# SMTP Configuration for Email Delivery
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USER_NAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_DOMAIN=yourdomain.com
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS=true

# Alternative: SendGrid Configuration (if using SendGrid instead of SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# General Email Settings
DEFAULT_EMAIL=your-email@yourdomain.com
FROM_EMAIL_ADDRESS=your-email@yourdomain.com
REPLY_TO_EMAIL_ADDRESS=noreply@yourdomain.com

# Development/Test Settings
DEVELOPMENT_EMAIL_RECIPIENT=your-test-email@example.com
TEST_EMAIL_RECIPIENT=your-test-email@example.com